# SL Notes Backend Environment Variables

# JWT Configuration (CHANGE IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Database
DATABASE_URL=sqlite:///./sl_notes.db

# Email Configuration (Configure with your Gmail App Password)
MAIL_USERNAME=your-gmail@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=your-gmail@gmail.com
MAIL_PORT=465
MAIL_SERVER=smtp.gmail.com

# Application
APP_NAME=SL Notes API
DEBUG=True
FRONTEND_URL=http://localhost:5173

# File Uploads
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760
